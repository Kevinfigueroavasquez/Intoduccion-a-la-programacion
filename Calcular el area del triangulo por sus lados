/ Calcular area triangulo por lados.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "math.h"
#include <iostream>
#include "conio.h"
using namespace std;

int main()
{
	int lado1,lado2,lado3;
	float S,area;
	cout<<"ingrese lado1:";
	cin>>lado1;
    cout<<"ingrese lado2:";
	cin>>lado2;
	cout<<"ingrese lado3:";
	cin>>lado3;
	S=(lado1+lado2+lado3)/2.0;
	area=sqrt(S*(S-lado1)*(S-lado2)*(S-lado3));
	cout<<area;
	getch();

	return 0;
}

